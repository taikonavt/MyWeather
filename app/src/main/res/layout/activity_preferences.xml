<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/settingsBackground"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:id="@+id/ll_activity_preferences_log_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorSettingsField"
        android:clickable="true"
        android:focusable="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_log_in"
            android:textColor="@color/colorTextMain"
            android:textSize="@dimen/standard_text_size"
            android:layout_marginTop="@dimen/standard_text_margin"
            android:layout_marginLeft="@dimen/standard_text_margin"
            android:layout_marginRight="@dimen/standard_text_margin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_log_in_hint"
            android:textColor="@color/colorTextHint"
            android:textSize="@dimen/standard_text_size"
            android:layout_margin="@dimen/standard_text_margin"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_activity_preferences_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorSettingsField"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/standard_field_margin"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/settings_measurement_units_hint"
            android:textColor="@color/colorTextMain"
            android:textSize="@dimen/standard_text_size"
            android:layout_margin="@dimen/standard_text_margin"
            />

        <TextView
            android:id="@+id/tv_activity_preferences_units"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/settings_measurement_units_metric"
            android:textColor="@color/colorTextHint"
            android:textSize="@dimen/standard_text_size"
            android:layout_margin="@dimen/standard_text_margin"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_activity_preferences_developer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSettingsField"
        android:text="@string/settings_about_developer"
        android:textColor="@color/colorTextMain"
        android:textSize="@dimen/standard_text_size"
        android:padding="@dimen/standard_text_margin"
        android:layout_marginTop="@dimen/standard_field_margin"
        />

</LinearLayout>